{
  "name": "web3-extension-react-and-ts",
  "version": "2.0.0",
  "description": "Browser extension using react and typescript material ui and web3",
  "private": true,
  "repository": "https://github.com/abhijithvijayan/web-extension-starter.git",
  "author": {
    "name": "Md. Sadhan Sarker",
